<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent">



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_group_categoria_filtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <RadioButton android:id="@+id/filtro_radio_trabalho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trabalho"/>
        <RadioButton android:id="@+id/filtro_radio_lazer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lazer" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group_categoria_filtro"
        android:layout_centerHorizontal="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:id="@+id/botao_filtrar"
            android:layout_margin="20dp"
            android:backgroundTint="#2196f3" />
    </LinearLayout>


</RelativeLayout>